# OneVice Backend Environment Configuration
# Copy to .env and update with your values

# Application
DEBUG=true
HOST=localhost
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/onevice

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0

# Neo4j Configuration (for AI agents)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# JWT Authentication
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Clerk Integration
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret

# OpenAI Configuration (for AI agents)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO